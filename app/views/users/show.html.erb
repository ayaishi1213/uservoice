<div class="main user-show">
  <div class="container">
    <div class="user">
    <% if @user.image_name == nil %>
      <%= image_tag '/default_user.jpg' %>
    <% else %>
      <%= image_tag @user.image_name, class: "user-img" %> 
    <% end %>
    <h2><%= @user.nickname %></h2>
    <p><%= @user.profile %>
    <%= link_to "編集", user_path(current_user) %>
    </div>
  </div>
</div>
