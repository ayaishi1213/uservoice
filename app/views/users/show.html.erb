<div class="main user-show">
  <div class="container">
    <div class="user">

    <% if @user.image_name == nil %>
      <%= image_tag '/default_user.jpg' %>
    <% else %>
      <img src="<%= "/user_images/#{@user.image_name}" %>">
    <% end %>

    <h2><%= @user.nickname %></h2>

    <% if @user.profile == nil %>
      <p>プロフィールを登録してみましょう！</p>
    <% else%>
      <p><%= @user.profile %></p>
    <% end %>

    <%= link_to "編集", edit_user_path(@user.id) %>

    <ul class="user-tabs">
      <li class="active"><%= link_to("投稿", "/users/#{@user.id}") %></li>
      <li><%= link_to("いいね!", "/users/#{@user.id}/likes") %></li>
    </ul>
  
    <% @user.posts.each do |post| %>
      <div class="posts-index-item">
        <div class="post-left">
          <img src="<%= "/user_images/#{post.user.image_name}" %>">
        </div>
        <div class="post-right">
          <div class="post-user-name">
            <%= link_to(@user.nickname, "/users/#{post.user.id}") %>
          </div>
          <%= link_to(@user.posts, "/posts/#{post.id}") %>
        </div>
      </div>
    <% end %>  
    </div>
  </div>
</div>