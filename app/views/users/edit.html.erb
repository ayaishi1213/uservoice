<%= form_with model: @user, url: user_path(@user.id), class: 'edit-main', local: true do |f| %>
  <div class="main users-edit">
  <div class="container">
    <div class="form-heading">アカウント編集</div>
    <div class="form-users-form">
      <div class="form-boby">
      <%# <%= render 'shared/error_messages', model: f.object %> 


      <div class="form-group">
        <div class='form-text-wrap'>
          <p>ニックネーム</p>
        </div>
          <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"例) User花子", maxlength:"40" %>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <p>画像</p>
        </div>
            <%= f.label :image_name %><br/>
            <%= f.file_field :image_name %>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <p>年齢</p>
        </div>
          <%= f.text_area :age, class:"input-default", id:"age" %>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <p>メールアドレス</p>
        </div>
          <%= f.text_area :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true  %>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <p>プロフィール</p>
        </div>
          <%= f.text_area :profile, class:"input-default", id:"profile", placeholder:"ご自由に記入ください" %>
      </div>

      <div class='edit-btn'>
         <%= f.submit "保存" ,class:"edit-pink-btn" %>
      </div>

      </div>
    </div>
  </div>
</div>
<% end %>

