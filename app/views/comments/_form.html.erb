<%= form_with(model: [post, comment] ) do |form| %>
  <div class="row"> 
   <div class="form-grop">
     <%= form.text_area :comment_content, :placeholder => 'コメントしてみましょう！', class:'form-control',rows:"7" ,maxlength:"1000" %>
   </div>
   <div class="actions">
     <%= form.submit "コメント投稿", class:"btn btn-sm standard-button" %>
   </div>
  </div>
<% end %>