<%= form_with model: @post, local: true do |f| %>
<div class="main posts-new">
  <div class="container">
  <h2 class="form-heading">投稿する</h2>
    <div class="form posts-form">
    <div class="form-body">
  <%# <% "エラーメッセージ" %> 

<%# 商品画像%>
<div class="form-group">
  <div class= "image-uplpad">
  <div class="weight-bold-text">
  商品画像
  </div>
  <div class="click-upload">
   <p>
   クリックしてファイルをアップロード
   </p>
   <%= f.file_field :image, id:"item-image" %>
  <%# プレビュー画像を表示させる部分%>
   <div id="image-list"></div>
</div>
<%# /商品画像 %>

<%# アイテム名 %>
<div class="new-posts">
  <div class="weight-bold-text">
    アイテム名(タイトル)
  </div>
  <%= f.text_area :item, class:"posts-text", id:"post-name", placeholder:"アイテム名（必須 30文字まで)", maxlength:"30"%>
  </div>
</div>
<%# /アイテム名 %>

<%# アイテムの説明%> 
<div class="new-posts">
  <div class="weight-bold-text">
    アイテム説明
  </div>
  <%= f.text_area :content, class:"posts-content", id:"post-info", placeholder:"アイテム説明（必須 1000文字まで)", rows:"7" ,maxlength:"1000"%>
  </div>
</div>
<%#アイテムの説明%>

<%# 投稿ボタン%>
 <div class="post-btn-contents">
   <%= f.submit "投稿する", class:"post-btn" %>
 </div>
<%# /投稿ボタン%>
 </div>
 </div>
 </div>
</div>
<% end %>









